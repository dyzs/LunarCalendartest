<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_act_photo_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            />


    </RelativeLayout>
    <RelativeLayout
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_vertical_margin"

            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_to_last_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_date"
            android:src="@drawable/btn_to_last_selector" />

        <ImageView
            android:id="@+id/iv_to_next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_date"
            android:src="@drawable/btn_to_next_selector" />
    </RelativeLayout>

    <com.coolerfall.widget.lunar.LunarView
        android:id="@+id/lunar_view_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_calendar_marker_event_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加标记记录"
            android:gravity="center"
            android:drawableTop="@mipmap/btn_add"
            />
        <TextView
            android:id="@+id/tv_del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="del_one"
            android:gravity="center"
            android:drawableTop="@mipmap/btn_add"
            />
        <TextView
            android:id="@+id/del_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="么么哒,del_all"
            android:gravity="center"
            android:drawableTop="@mipmap/btn_add"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_calendarlist_lunar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        />

</LinearLayout>
